@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<h1 class="text-center">Bize Ulaşın Mesajları</h1>
<table class="table text-center">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarİh</th>
        <th>Göster</th>
        <th>Sİl</th>
    </tr>
    @foreach(var item in Model)
            {
        count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@item.Subject</td>
                    <td>@item.MessageDate.ToString("dd.MMM.yyyy")</td>
                    <td><a href="#" class="btn btn-outline-primary">Göster</a></td>
                    <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                </tr>
            }
</table>

