@using EntityKatman.concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1 class="text-center">Yorum Listesi</h1>
<table class="table text-center">

    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Şehİr</th>
        <th>Yorum</th>
        <th>Tarİh</th>
        <th>Sİl</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{sayac = @sayac + 1;}
            <td>@sayac</td>
            <td>@item.CommentUser</td>
            <td>@item.Destination.City</td>
            <td>@item.CommentContent</td>
            <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger col-9 mx-auto">Sil</a></td>
        </tr>
    }
</table>

