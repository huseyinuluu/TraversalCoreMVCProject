@using EntityKatman.concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<style>
    td img{
        border-radius:50%;
    }
</style>

<h1 class="text-center">Yetkililer</h1>

<table class="table text-center">

    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Adı Soyadı</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{sayac = @sayac + 1;}
            <td>@sayac</td>
            <td><img src="@item.Image" width="50" height="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>

            @{
                if (item.Status == true)
                {
                    <td>
                        <a href="/Admin/Guide/ChangetoFalse/@item.GuideID" class="btn btn-outline-danger">
                            Pasif Yap
                        </a>
                    </td>
                }
                else
                {
                    <td>
                        <a href="/Admin/Guide/ChangetoTrue/@item.GuideID" class="btn btn-outline-primary">
                            Aktif Yap
                        </a>
                    </td>
                }
            }

            <td><a href="/Admin/Guide/EditGuide" class="btn btn-outline-success col-9 mx-auto">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide" class="btn btn-outline-primary col-9 mx-auto">Yetkili Ekle</a>