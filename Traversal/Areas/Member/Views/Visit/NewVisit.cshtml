@model EntityKatman.concrete.Visit
@{
    ViewData["Title"] = "NewVisit";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Rota Ekle</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Using the most basic table markup, here’s how <code>.table</code>-based tables look in Bootstrap. You can use any example of below table for your table and it can be use with any type of bootstrap tables. </p>
                    <p><span class="text-bold-600">Example 1:</span> Table with outer spacing</p>
                    <form method="post">
                        <div class="form-group">
                            @Html.Label("Şehir")
                            @Html.DropDownListFor(x => x.DestinationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                        </div>
                        @*<div class="form-group">
                @Html.Label("HuzurEvi")
                <input type="text" asp-for="DestinationID" class="form-control" />
            </div>*@
                        <div class="form-group">
                            @Html.Label("Kişi Sayısı")
                            <input type="text" asp-for="PersonCount" class="form-control" />
                        </div>
                        @*<div class="form-group">
                            <input type="hidden" asp-for="DestinationID" value="@ViewBag.destID" class="form-control" />
                        </div>*@
                        <div class="form-group">
                            @Html.Label("Tarih")
                            <input type="date" asp-for="VisitDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            @Html.Label("Açıklama")
                            <input type="text" asp-for="Description" class="form-control" />
                        </div>
                        <button class="btn btn-outline-success">Rota Ekle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
