@model HuzurELiProjesi.Models.ResetPasswordViewModel

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />

    <h2>Şifre Yenileme</h2>
    <form method="post">
        <label>Yeni Şifre:</label>
        <input type="text" class="form-control" asp-for="Password" /><br />
        <label>Şifre Tekrar:</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" /><br />
        <button class="btn btn-primary">Güncelle</button>
    </form>
</div>